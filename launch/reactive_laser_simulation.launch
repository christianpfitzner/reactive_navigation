<launch>

<!-- simulation -->
   <include file="$(find stdr_robot)/launch/robot_manager.launch" />
   <node type="stdr_server_node" pkg="stdr_server" name="stdr_server" output="screen" args="$(find reactive_navigation)/launch/map_ohm_2.yaml"/>
   <node pkg="tf" type="static_transform_publisher" name="world2map" args="0 0 0 0 0 0  world map 100" />
   <include file="$(find stdr_gui)/launch/stdr_gui.launch"/>
   <node pkg="stdr_robot" type="robot_handler" name="$(anon robot_spawn)" args="add $(find reactive_navigation)/launch/pandora_robot_with_laser.yaml 2 2 0" />


<!-- reactive laser node -->
   <node pkg="reactive_navigation" type="reactive_navigation_node" name="navigation_node" output="screen"/>

</launch>
